<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sti_bgc="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="address"
            type="cs.collaboration.yescredit.model.Address" />

        <variable
            name="listener"
            type="cs.collaboration.yescredit.ui.account.adapter.address.AddressRecyclerAdapter.OnAddressRecyclerListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:onClick="@{() -> listener.onClickAddress(address)}"
        android:padding="16dp">

        <TextView
            android:id="@+id/address_street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{address.address_street}"
            android:textAppearance="?attr/textAppearanceBody2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="185 - x 27th Avenue," />

        <TextView
            android:id="@+id/address_barangay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@{address.address_barangay}"
            android:textAppearance="?attr/textAppearanceBody2"
            app:layout_constraintStart_toEndOf="@+id/address_street"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="East Rembo" />

        <TextView
            android:id="@+id/address_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{address.address_city}"
            android:textAppearance="?attr/textAppearanceBody2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address_street"
            tools:text="Makati City" />

        <TextView
            android:id="@+id/address_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{address.address_province}"
            android:textAppearance="?attr/textAppearanceBody2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address_city"
            tools:text="Metro Manila Philippines" />

        <TextView
            android:id="@+id/address_zipcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{address.address_zipcode}"
            android:textAppearance="?attr/textAppearanceBody2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address_province"
            tools:text="1216 Metro Manila" />

        <ImageView
            android:id="@+id/address_status"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/desc_applied"
            android:src="@drawable/ic_apply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            sti_bgc:address_visibility="@{address.address_selected}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
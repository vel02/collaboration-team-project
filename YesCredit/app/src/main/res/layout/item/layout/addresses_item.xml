<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sti_bgc="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="addresses"
            type="cs.collaboration.yescredit.model.Address" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp">

            <TextView
                android:id="@+id/address_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                sti_bgc:address_status="@{addresses.address_status}"
                sti_bgc:address_visibility="@{addresses.address_status}"
                tools:text="Primary address" />


            <TextView
                android:id="@+id/address_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{addresses.address_street}"
                android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address_primary"
                tools:text="185 - x 27th Avenue," />

            <TextView
                android:id="@+id/address_barangay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@{addresses.address_barangay}"
                android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintStart_toEndOf="@+id/address_street"
                app:layout_constraintTop_toTopOf="@+id/address_street"
                tools:text="East Rembo" />

            <TextView
                android:id="@+id/address_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{addresses.address_city}"
                android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/address_street"
                tools:text="Makati City" />

            <TextView
                android:id="@+id/address_province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{addresses.address_province}"
                android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/address_city"
                tools:text="Metro Manila Philippines" />

            <TextView
                android:id="@+id/address_zipcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{addresses.address_zipcode}"
                android:textAppearance="?attr/textAppearanceBody2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/address_province"
                tools:text="1216 Metro Manila" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/dividerVertical" />
    </LinearLayout>

</layout>
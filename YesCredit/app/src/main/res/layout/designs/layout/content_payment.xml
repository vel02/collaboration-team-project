<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/photo_home_background"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/content_payment_status_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/view_plain_round_corner"
            android:orientation="vertical"
            android:padding="24dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/you_don_t_have_available_transaction_label"
                android:textAppearance="?attr/textAppearanceBody1" />

        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_payment_receipt_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/view_plain_round_corner"
            android:padding="16dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/content_payment_days_to_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/solid"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="30 Days to Pay" />

            <LinearLayout
                android:id="@+id/content_payment_schedule_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_round_corner"
                android:orientation="horizontal"
                android:padding="16dp"
                android:weightSum="2"
                app:layout_constraintTop_toBottomOf="@+id/content_payment_days_to_pay">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/schedule_label"
                    android:textAppearance="?attr/textAppearanceBody2" />


                <TextView
                    android:id="@+id/content_payment_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textStyle="bold"
                    tools:text="12/12/2020" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/content_payment_loan_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="16dp"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/content_payment_schedule_root">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loan_label"
                        android:textAppearance="?attr/textAppearanceBody2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/interest_label"
                        android:textAppearance="?attr/textAppearanceBody2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/tax_label"
                        android:textAppearance="?attr/textAppearanceBody2" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/content_payment_loan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textAppearance="?attr/textAppearanceBody2"
                        tools:text="PHP 11,000.00" />

                    <TextView
                        android:id="@+id/content_payment_interest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="end"
                        android:textAppearance="?attr/textAppearanceBody2"
                        tools:text="PHP 1,100.00(15%)" />

                    <TextView
                        android:id="@+id/content_payment_tax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="end"
                        android:textAppearance="?attr/textAppearanceBody2"
                        tools:text="PHP 88.00(0.8%)" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/content_payment_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/solid"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/content_payment_loan_root" />

            <LinearLayout
                android:id="@+id/content_payment_total_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="16dp"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/content_payment_divider">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/total_label"
                        android:textAppearance="?attr/textAppearanceBody2" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/content_payment_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textStyle="bold"
                        tools:text="PHP 12,738.00" />


                </LinearLayout>

            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fragment_payment_credit_root"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/view_stroke_round_corner"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/content_payment_pay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/content_payment_total_root">

                <ImageView
                    android:id="@+id/fragment_payment_credit_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/desc_credit_card"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/ic_card_express" />

                <TextView
                    android:id="@+id/fragment_payment_card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:textAppearance="?attr/textAppearanceBody2"
                    app:layout_constraintStart_toEndOf="@+id/fragment_payment_credit_image"
                    app:layout_constraintTop_toTopOf="@+id/fragment_payment_credit_image"
                    tools:text="American Express" />

                <TextView
                    android:id="@+id/fragment_payment_card_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/fragment_payment_credit_image"
                    app:layout_constraintStart_toEndOf="@+id/fragment_payment_credit_image"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_payment_card_name"
                    tools:text="Credit card &#9679;&#9679;&#9679;&#9679;7972" />


                <TextView
                    android:id="@+id/fragment_payment_credit_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm_label"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@color/basic_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <Button
                android:id="@+id/content_payment_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_round_corner"
                android:text="@string/pay_now_label"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/content_payment_total_root"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</layout>
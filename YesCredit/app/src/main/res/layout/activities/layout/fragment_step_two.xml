<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="24dp"
        tools:context=".ui.apply.fragment.StepTwoFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:text="@string/provide_a_government_id_label"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/solid"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/solid" />

        <ImageView
            android:id="@+id/fragment_two_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/provided_government_id_label"
            android:src="@drawable/ic_temp_placeholder" />

        <TextView
            android:id="@+id/fragment_two_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:text="@string/upload_image_label" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:text="@string/step_2_10_label"
                android:textAppearance="?attr/textAppearanceBody1" />

            <Button
                android:id="@+id/fragment_two_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:text="@string/next_label"
                tools:ignore="RelativeOverlap" />


        </RelativeLayout>


    </LinearLayout>


</layout>
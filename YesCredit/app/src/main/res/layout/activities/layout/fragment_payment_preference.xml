<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.account.fragment.information.PaymentPreferenceFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_card_title_root"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/account_base"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/payment_preferences_label"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/fragment_card_sub_title"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/fragment_card_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/how_do_you_like_to_pay_check_out_your_preferences_below_label"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/preferred_way_to_pay_label"
                android:textAppearance="?attr/textAppearanceBody2" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="?android:attr/dividerVertical" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fragment_payment_pref_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp">


                <ImageView
                    android:id="@+id/fragment_payment_pref_cart"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/desc_cart"
                    android:src="@drawable/ic_cart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/fragment_payment_pref_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="@string/online_purchases_label"
                    android:textAppearance="?attr/textAppearanceBody2"
                    app:layout_constraintStart_toEndOf="@id/fragment_payment_pref_cart"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/fragment_payment_pref_card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/fragment_payment_pref_label"
                    app:layout_constraintTop_toBottomOf="@id/fragment_payment_pref_label"
                    tools:text="American Express" />

                <TextView
                    android:id="@+id/fragment_payment_pref_card_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/fragment_payment_pref_card_name"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_payment_pref_card_name"
                    tools:text="Credit card &#9679;&#9679;&#9679;&#9679;7972" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/desc_right_arrow"
                    android:src="@drawable/ic_arrow_right_dark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="?android:attr/dividerVertical" />

        </LinearLayout>


    </LinearLayout>
</layout>
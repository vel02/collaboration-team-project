<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <LinearLayout
        android:id="@+id/fragment_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        tools:context=".ui.apply.fragment.StepOneFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/last_name_label"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/solid"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/fragment_one_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_round_corner"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="textNoSuggestions"
            android:padding="6dp"
            tools:ignore="LabelFor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/first_name_label"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/solid"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/fragment_one_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_round_corner"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="textNoSuggestions"
            android:padding="6dp"
            tools:ignore="LabelFor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/middle_name_label"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/solid"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/fragment_one_middle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_round_corner"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="textNoSuggestions"
            android:padding="6dp"
            tools:ignore="LabelFor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/gender_label"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/solid"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/fragment_one_gender_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/fragment_one_gender_male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="@string/male_tag"
                android:text="@string/male_label" />

            <RadioButton
                android:id="@+id/fragment_one_gender_female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tag="@string/female_tag"
                android:text="@string/female_label" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/date_of_birth_label"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/solid"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/fragment_one_birth_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_round_corner"
            android:ems="10"
            android:hint="@string/date_format_label"
            android:importantForAutofill="no"
            android:inputType="date|textNoSuggestions"
            android:padding="6dp"
            android:textAppearance="?attr/textAppearanceBody1"
            app:drawableEndCompat="@drawable/ic_date"
            tools:ignore="LabelFor" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:text="@string/step_1_10_label"
                android:textAppearance="?attr/textAppearanceBody1" />

            <Button
                android:id="@+id/fragment_one_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:text="@string/next_label"
                tools:ignore="RelativeOverlap" />


        </RelativeLayout>

    </LinearLayout>
</layout>
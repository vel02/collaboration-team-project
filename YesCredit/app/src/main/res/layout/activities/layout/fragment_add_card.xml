<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_add_card_constraint_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".ui.account.fragment.information.card.AddCardFragment">


        <LinearLayout
            android:id="@+id/fragment_add_card_linear_root"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/fragment_add_card_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:contentDescription="@string/card_placeholder_label"
                android:src="@drawable/ic_card_placeholder" />

            <TextView
                android:id="@+id/fragment_add_card_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="@string/desc_let_s_start_with_your_card_number"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/grey_one" />

            <EditText
                android:id="@+id/fragment_add_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="@string/credit_card_number_label"
                android:importantForAutofill="no"
                android:inputType="number|textNoSuggestions|text"
                android:maxLength="19"
                android:singleLine="true"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColorHint="@color/grey_two"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/fragment_add_card_relative_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/fragment_add_card_four_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="7972"
                    android:textAppearance="?attr/textAppearanceBody1" />

                <EditText
                    android:id="@+id/fragment_add_card_expiration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="@string/hint_mm_yy"
                    android:importantForAutofill="no"
                    android:inputType="number|textNoSuggestions"
                    android:maxLength="5"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColorHint="@color/grey_two" />


                <EditText
                    android:id="@+id/fragment_add_card_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="@string/hint_security_code"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColorHint="@color/grey_two"
                    tools:ignore="RelativeOverlap" />

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/fragment_add_card_selected_root"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_add_card_linear_root">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/dividerVertical" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fragment_add_card_select_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/fragment_add_card_billing_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/billing_address_label"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RelativeOverlap" />

                <TextView
                    android:id="@+id/fragment_add_card_billing_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAppearance="?attr/textAppearanceBody2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_card_billing_label"
                    tools:text="195 - y 25th Avenue, East Rembo\nMakati City\nMetro Manila Philippines\n1219 METRO MANILA" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:contentDescription="@string/desc_right_arrow"
                    android:src="@drawable/ic_arrow_right_dark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


        <Button
            android:id="@+id/fragment_add_card_next"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/solid"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/next_label"
            android:textAllCaps="false"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="UnusedAttribute"
            tools:targetApi="m" />


        <Button
            android:id="@+id/fragment_add_card_add"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/solid"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/add_card_label"
            android:textAllCaps="false"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="UnusedAttribute"
            tools:targetApi="m" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/stepOneFragment">
    <fragment
        android:id="@+id/stepOneFragment"
        android:name="cs.collaboration.yescredit.ui.apply.fragment.StepOneFragment"
        android:label="StepOneFragment"
        tools:layout="@layout/fragment_step_one" >
        <action
            android:id="@+id/action_stepOneFragment_to_stepTwoFragment"
            app:destination="@id/stepTwoFragment" />
    </fragment>

    <fragment
        android:id="@+id/stepTwoFragment"
        android:name="cs.collaboration.yescredit.ui.apply.fragment.StepTwoFragment"
        android:label="StepTwoFragment"
        tools:layout="@layout/fragment_step_two" >
        <action
            android:id="@+id/action_stepTwoFragment_to_stepOneFragment"
            app:destination="@id/stepOneFragment"
            app:popUpTo="@id/stepOneFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>